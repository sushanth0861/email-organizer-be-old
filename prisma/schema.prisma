generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String     @id @default(cuid())
  first_name    String
  last_name     String
  email_id      String     @unique
  password      String
  date_of_birth String?
  phone_number  String?
  // email         Email[]
  folders       Folders[]
  category      Category[]
  Draft         Draft[]
}

model Email {
  id               String   @id @default(cuid())
  sender           String
  reciver          String
  subject          String
  body             String
  email_time_stamp DateTime @default(now())
  orignal_email_id String
  read             Boolean
  star             Boolean

  // user User @relation(fields: [reciver], references: [id], onDelete: Cascade)
}

model Folders {
  id      String   @id @default(cuid())
  user_id String
  name    String
  mails   String[]
  user    User     @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Category {
  id      String   @id @default(cuid())
  user_id String   @unique
  inbox   String[]
  trash   String[]
  archive String[]
  junk    String[]

  user User @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

model Draft {
  id      String @id @default(cuid())
  user_id String
  from    String
  to      String
  subject String
  text    String
  user    User   @relation(fields: [user_id], references: [id], onDelete: Cascade)
}

